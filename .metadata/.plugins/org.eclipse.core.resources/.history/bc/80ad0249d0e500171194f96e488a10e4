		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public Story update(int id, String json) {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public boolean destroy(int id) {
		// TODO Auto-generated method stub
		return false;
	}

}

